@{
    ViewData["Title"] = "Access Denied";
}

<style>
    .card-custom {
        background: rgba(20, 34, 51, 0.9);
        backdrop-filter: blur(10px);
        padding: 40px;
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(231, 76, 60, 0.25);
        max-width: 420px;
        margin: 60px auto;
        color: #fff;
        border: 1px solid rgba(255, 255, 255, 0.1);
        text-align: center;
    }

        .card-custom h1 {
            font-size: 2rem;
            font-weight: bold;
            color: #e74c3c;
            margin-bottom: 20px;
        }

        .card-custom p {
            font-size: 1rem;
            margin-bottom: 30px;
            color: #ccc;
        }

    .btn-home {
        background: #1abc9c;
        border: none;
        padding: 12px 24px;
        color: #fff;
        font-weight: bold;
        border-radius: 8px;
        text-decoration: none;
        box-shadow: 0 4px 12px rgba(26, 188, 156, 0.4);
        transition: all 0.3s ease;
    }

        .btn-home:hover {
            background: #16a085;
            box-shadow: 0 6px 20px rgba(26, 188, 156, 0.6);
        }
</style>

<div class="card-custom">
    <h1>Access Denied</h1>
    <p>You do not have permission to view this page.</p>
    <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn-home">← Back to Home</a>
</div>
