<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h3 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Add New Cinema</h3>
        </div>
        <div class="card-body p-4">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="name" class="form-label fw-semibold">Name</label>
                    <input type="text" class="form-control shadow-sm" id="name" name="Name" required>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label fw-semibold">Description</label>
                    <div class="form-floating">
                        <textarea class="form-control shadow-sm" placeholder="Leave a description here" id="description" name="Description" style="height: 100px"></textarea>
                        <label for="description">Your Description Here...</label>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="cinemaLogo" class="form-label fw-semibold">Cinema Logo</label>
                    <input type="file" class="form-control shadow-sm" id="cinemaLogo" name="CinemaLogo" accept="image/*">
                </div>

                <div class="mb-3">
                    <label for="address" class="form-label fw-semibold">Address</label>
                    <input type="text" class="form-control shadow-sm" id="address" name="Address" required>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-1"></i> Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
