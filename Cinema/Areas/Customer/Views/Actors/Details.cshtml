@model Actor
@{
    ViewData["Title"] = $"{Model.FirstName} {Model.LastName} – Profile";
}

<!-- 🔥 Styles -->
<style>
    
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    

    .profile-container {
        max-width: 1000px;
        width: 90%;
        margin: 2rem auto;
        padding: 60px;
        background: linear-gradient(135deg, #141e30, #243b55);
        border-radius: 30px;
        box-shadow: 0 20px 50px rgba(0,0,0,0.6);
        text-align: center;
        color: #eee;
        animation: fadeInUp 0.8s ease-out both;
    }

    .profile-image {
        width: 180px;
        height: 180px;
        object-fit: cover;
        border-radius: 50%;
        border: 4px solid #00e6c3;
        box-shadow: 0 0 20px rgba(0,230,195,0.4);
        transition: transform 0.3s ease;
    }

        .profile-image:hover {
            transform: scale(1.05);
        }

    .profile-name {
        margin: 15px 0;
        font-size: 2.5rem;
        font-weight: 700;
        color: #00e6c3;
    }

    .profile-section {
        margin-top: 2.5rem;
        color: #ddd;
        max-width: 800px;
        line-height: 1.6;
    }

    .segment-title {
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-size: 1.5rem;
        color: #fff;
    }

    .profile-buttons {
        margin: 2rem 0;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 1rem;
    }

    .btn-main, .btn-secondary {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: .6rem 1.4rem;
        border-radius: 50px;
        font-size: 0.95rem;
        font-weight: 500;
        text-decoration: none;
        transition: 0.3s ease;
    }

    .btn-main {
        background: #00e6c3;
        color: #111;
    }

        .btn-main:hover {
            background: #00c3aa;
            box-shadow: 0 0 12px rgba(0,195,170,0.5);
        }

    .btn-secondary {
        background: #333;
        color: #ddd;
    }

        .btn-secondary:hover {
            background: #444;
        }

    .movie-gallery {
        margin-top: 3rem;
        animation: fadeInUp 0.8s ease-out both;
    }

    .movie-card {
        background: linear-gradient(135deg, #141e30, #243b55);
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 8px 20px rgba(0,0,0,0.4);
        transition: transform 0.3s ease;
    }

        .movie-card:hover {
            transform: translateY(-5px);
        }

        .movie-card img {
            width: 100%;
            height: 240px;
            object-fit: contain;
        }

        .movie-card .card-body {
            padding: 15px;
        }

        .movie-card .card-title {
            color: #00e6c3;
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
        }

        .movie-card .card-text {
            color: #aaa;
            font-size: 0.9rem;
        }
</style>

<div class="container-fluid my-5">
    <div class="profile-container mx-auto">
        <img src="/assets/images/cast/@Model.ProfilePicture" class="profile-image" alt="@Model.FirstName" />

        <h1 class="profile-name">@Model.FirstName @Model.LastName</h1>

        <div class="profile-section">
            <div class="segment-title">📝 Bio</div>
            <p>@Model.Bio</p>
        </div>

        <div class="profile-section">
            <div class="segment-title">📰 Latest News</div>
            <p>@Model.News</p>
        </div>

        <div class="profile-buttons">
            <a href="" target="_blank" class="btn-main">🌐 Facebook</a>
            <a href="" target="_blank" class="btn-main">📸 Instagram</a>
            <a href="javascript:history.back()" class="btn-secondary">🔙 Back</a>
        </div>
    </div>

    <div class="movie-gallery">
        <h2 class=" text-center">🎥 Movies Featuring @Model.FirstName</h2>
        <div class="row g-4">
            @foreach (var movie in Model.ActorMovies.Select(am => am.Movie))
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card movie-card h-100">
                        <img src="/assets/images/movies/@movie.ImgUrl" alt="@movie.Name" />
                        <div class="card-body text-center">
                            <h5 class="card-title">@movie.Name</h5>
                            <p class="card-text">@movie.Description.Substring(0, Math.Min(80, movie.Description.Length))…</p>
                            <a href="/customer/movies/details?id=@movie.Id" class="btn btn-sm btn-outline-info">View</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
